{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "lib": ["es2020"],

    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",

    "declaration": true,
    "noImplicitAny": false,
    "strict": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "exclude": ["node_modules"],

  "include": ["src/*.ts", "src/**/*.ts"],
  "skipLibCheck": true,
  "forceConsistentCasingInFileNames": true
}
